<h1>Listing Tracks</h1>
<table class="table">
  <thead>
    <tr>
      <th>Artist</th>
      <th>Title</th>
      <th>URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr data-id="<%= track.id %>">
        <td class="artist"><%= track.artist %></td>
        <td class="title"><%= track.title %></td>
        <td><a target="_blank" href="<%= track.url %>"</a>Play</td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

